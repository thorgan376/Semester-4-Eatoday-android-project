<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textColor="#894"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_full_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/custom_background_edittext"
        android:hint="Nhập họ và tên của bạn"
        android:inputType="text"
        android:autofillHints="First and LastName"
        android:maxHeight="100dp"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:id="@+id/edt_full_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Năm sinh:"
        android:textColor="#894"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_date_of_birth"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/custom_background_edittext"
        android:hint="Nhập năm sinh của bạn"
        android:autofillHints="YourBirthDate"
        android:maxHeight="100dp"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:inputType="number"
        android:id="@+id/edt_date_of_birth"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Hiển thị thông tin"
        android:textAllCaps="false"
        android:background="@drawable/custom_background_button"
        android:id="@+id/btn_show_info"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin đã nhập"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/tv_info"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:maxHeight="100dp"
        android:minHeight="35dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:id="@+id/tv_show_info"
        />
</LinearLayout>
