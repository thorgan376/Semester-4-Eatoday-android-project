<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:text="Sign Up"
                    android:textSize="24dp"
                    android:fontFamily="@font/font_outfit_bold"/>

                <ImageView
                    android:layout_marginStart="150dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_logo_app"

                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/font_outfit_bold"
            android:text="Create an acount"
            android:textFontWeight="600"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="36dp"
          />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
           >
        <EditText
            android:layout_width="179dp"
            android:layout_height="48dp"
            android:layout_marginStart="36dp"
            android:hint="First Name"
            android:background="@drawable/custom_input"
            />
        <EditText
            android:layout_width="134dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:hint="Last Name"
            android:background="@drawable/custom_input"
            />
        </LinearLayout>
     <TableLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dp">
         <TableRow>
             <EditText
                 android:layout_width="90dp"
                 android:layout_height="48dp"
                 android:layout_marginStart="36dp"
                 android:hint="DD"
                 android:background="@drawable/custom_input"
                 />
             <EditText
                 android:layout_width="90dp"
                 android:layout_height="48dp"
                 android:layout_marginStart="16dp"
                 android:hint="MM"
                 android:background="@drawable/custom_input"
                 />
             <EditText
                 android:layout_width="116dp"
                 android:layout_height="48dp"
                 android:layout_marginStart="16dp"
                 android:hint="YYYYY"
                 android:background="@drawable/custom_input"
                 />
         </TableRow>
     </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">
        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:hint="Enter email address"
            android:background="@drawable/custom_input"
            android:layout_marginTop="12dp"
            />
        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:hint="Enter password"
            android:background="@drawable/custom_input"
            android:layout_marginTop="12dp"
            />
        <EditText
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:hint="Re-enter password"
            android:background="@drawable/custom_input"
            android:layout_marginTop="12dp"
            />
            <TextView
                android:id="@+id/by_clicking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By clicking Sign Up, you agree to our Terms, Privacy Policy and Cookies Policy."
                android:textAppearance="@style/by_clicking"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="12dp"
                android:textFontWeight="400"
                />
            <Button
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:text="Sign Up"
                android:fontFamily="@font/font_outfit_bold"
                android:textSize="18dp"
                android:textFontWeight="400"
                android:background="@drawable/bg_button"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="16dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:textAppearance="@style/by_clicking"
                android:layout_marginStart="108dp"
                android:layout_marginEnd="104dp"
                android:layout_marginTop="20dp"
                android:textFontWeight="400"
                />
        </TableLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>