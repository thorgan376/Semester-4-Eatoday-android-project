<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:navigationIcon="@drawable/ic_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:text="General acount"
                    android:textSize="24dp"
                    android:fontFamily="@font/font_outfit_bold"/>

                <ImageView
                    android:layout_marginStart="80dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_logo_app"

                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="54dp"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/bg_radius_bottom_corner"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_ava"
                />

            <TextView
                android:id="@+id/txt_change_ava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_outfit"
                android:textFontWeight="1000"
                android:text="Change avatar"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_width="179dp"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:hint="First Name"
                android:background="@drawable/custom_input"
                />
            <EditText
                android:layout_width="134dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:hint="Last Name"
                android:background="@drawable/custom_input"
                />
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TableRow>
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="36dp"
                    android:hint="DD"
                    android:background="@drawable/custom_input"
                    />
                <EditText
                    android:layout_width="90dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:hint="MM"
                    android:background="@drawable/custom_input"
                    />
                <EditText
                    android:layout_width="116dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="16dp"
                    android:hint="YYYYY"
                    android:background="@drawable/custom_input"
                    />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">
            <EditText
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:hint="Enter email address"
                android:background="@drawable/custom_input"
                android:layout_marginTop="12dp"
                />

            <Button
                android:layout_width="328dp"
                android:layout_height="48dp"
                android:text="Update"
                android:fontFamily="@font/font_outfit_bold"
                android:textSize="18dp"
                android:textFontWeight="400"
                android:background="@drawable/bg_button"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="16dp"
                />

        </TableLayout>

    </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="87dp"
            android:background="@color/orange"
            app:itemIconTint="@color/custom_color"
            app:itemTextColor="@color/custom_color"
            app:menu="@menu/bottom_nav_menu"
            />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>