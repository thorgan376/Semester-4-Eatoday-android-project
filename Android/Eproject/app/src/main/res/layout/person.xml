<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D9D9D9"
    tools:context=".PersonActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:elevation="0dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black"
                    android:text="Person"
                    android:textSize="24dp"
                    android:fontFamily="@font/font_outfit_bold"/>

                <ImageView
                    android:layout_marginStart="200dp"
                    android:layout_width="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_logo_app"

                    />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
<LinearLayout
    android:layout_marginTop="54dp"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@drawable/bg_radius_bottom_corner"
    android:orientation="vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_ava"
         />

    <TextView
        android:id="@+id/txt_change_ava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font_outfit"
        android:textFontWeight="1000"
        android:text="Change avatar"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        >
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <Button
                android:id="@+id/btn_changepass"
                android:drawableLeft="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Change password"
                android:textAllCaps="false"
                android:drawablePadding="12dp"
                android:paddingStart="17dp"
                android:textSize="15dp"
                android:background="@drawable/bg_custom_btn_person"
                android:textAlignment="viewStart"
                android:layout_marginTop="12dp"

                />
            <Button
                android:id="@+id/btn_changeuser"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Change user"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="12dp"
                android:paddingStart="17dp"
                android:textSize="15dp"
                android:textAlignment="viewStart"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_custom_btn_person"
                />
            <Button
                android:id="@+id/btn_favorite"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Favorite"
                android:drawableLeft="@drawable/ic_fav"
                android:textAlignment="viewStart"
                android:drawablePadding="12dp"
                android:paddingStart="17dp"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_custom_btn_person"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Note"
                android:textAllCaps="false"
                android:textAlignment="viewStart"
                android:drawablePadding="12dp"
                android:paddingStart="17dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_note"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_custom_btn_person"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
            android:textAllCaps="false"
                android:text="Log out"
                android:drawablePadding="12dp"
                android:paddingStart="17dp"
                android:textSize="15dp"
                android:drawableLeft="@drawable/ic_log_out"
                android:textAlignment="viewStart"
                android:background="@drawable/bg_custom_btn_person"
                android:layout_marginTop="6dp"
                />
        </TableLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/orange"
        app:itemIconTint="@color/custom_color"
        app:itemTextColor="@color/custom_color"
        app:menu="@menu/bottom_nav_menu"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>